{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "experimentalDecorators": true,
    "typeRoots": [
      "src/typings",
       "node_modules/@types"
    ],
    "baseUrl": "./src",
    "lib": [
      "es5", 
      "es2015", 
      "es2017", 
      "dom"
    ],
  },
  "include": [
    "./src/**/*"
  ]
}
